{
  "name": "@eve-framework/root",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/eve-framework/framework.git"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "@eve-framework/*/**"
    ]
  },
  "scripts": {
    "postinstall": "manypkg check",
    "dev": "turbo run dev --parallel --no-cache",
    "build": "turbo run build",
    "deploy": "turbo run deploy",
    "release": "yarn build && changeset publish",
    "lint": "eslint --cache --color '**/*.{js,ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "clean": "manypkg exec rm -rf node_modules && manypkg exec rm -rf dist && rm -rf node_modules"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "test": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "deploy": {
        "dependsOn": [
          "build"
        ],
        "cache": false
      }
    }
  },
  "dependencies": {
    "@changesets/cli": "^2.17.0",
    "@manypkg/cli": "0.18.0",
    "@pulumi/aws": "4.34.0",
    "@pulumi/pulumi": "3.22.1",
    "@types/aws-lambda": "8.10.83",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "esbuild": "^0.14.11",
    "eslint": "^7.26.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "turbo": "^1.0",
    "typescript": "^4.4"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "arrowParens": "avoid"
  },
  "eslintIgnore": [
    "packages/**/*/dist/"
  ],
  "resolutions": {
    "typescript": "^4.4"
  }
}
